generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Portfolio {
  id           Int      @id @default(autoincrement())
  name         String
  initialValue Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  trades       Trade[]
}

model Trade {
  id          Int       @id @default(autoincrement())
  ticker      String
  entryPrice  Float
  exitPrice   Float
  quantity    Int
  date        DateTime
  pnl         Float // Profit and Loss calculation: (exitPrice - entryPrice) * quantity
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  portfolioId Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
